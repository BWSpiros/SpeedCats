<input type="hidden" name="authenticity_token"
value="<%= form_authenticity_token %>">


<p>
<label>Name
<input name="cat[name]" type="text" value="<%= @cat.name %>">
</label>
</p>

<p>
<label>Sex:
M<input name="cat[sex]" type="radio" value="M" <%= "checked" if @cat.sex == "M" %>>
F<input name="cat[sex]" type="radio" value="F" <%= "checked" if @cat.sex == "F" %>>
</label>
</p>



<p>
<label>Color
<select name="cat[color]">
<option value="black" <%= "selected" if @cat.color == "black"%>>Black</option>
<option value="white" <%= "selected" if @cat.color == "white"%>>White</option>
<option value="red" <%= "selected" if @cat.color == "red"%>>Red</option>
<option value="green" <%= "selected" if @cat.color == "green"%>>Green</option>
</select>
</label>
</p>

<p>
<label>Birth Date
<input name="cat[birth_date]" type="date" value="<%= @cat.birth_date %>">
</label>
</p>

<p>
  <input type="submit" name="Show off the Cat!" value="Show off the Cat!">
</p>
